@model IEnumerable<BaseModel.Atividade>

@{
    ViewBag.Title = "Atividades";
}

<h2>Atividades</h2>

<p>
    @Html.ActionLink("Criar novo", "Create", new { id = (int)Session["MateriaID"]})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._MateriaID.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Tipo.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._MateriaID.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Tipo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AtividadeID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AtividadeID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.AtividadeID })
        </td>
    </tr>
}

</table>
